# SonarQube Scanner Configuration
# Copy this file to .env and update with your values

# SonarQube Server URL (use sonarqube-server for Docker scanner, localhost:9000 for browser)
SONAR_HOST_URL=http://sonarqube-server:9000

# Authentication Token (generate from SonarQube UI: Administration > Security > Users > admin > Tokens)
SONAR_TOKEN=your-token-here

# Project Configuration
SONAR_PROJECT_KEY=my-monorepo
SONAR_PROJECT_NAME=NestJS + Expo + tRPC Monorepo
SONAR_PROJECT_VERSION=1.0.0

# Source Configuration
# Scan entire monorepo: apps and packages directories
# Change this if you want to scan specific directories only
# Example: apps/api,apps/mobile,packages/trpc
SONAR_SOURCES=apps,packages
# Note: Don't set SONAR_TESTS to avoid files being indexed twice

# Exclusions (comma-separated)
SONAR_EXCLUSIONS=**/node_modules/**,**/dist/**,**/build/**,**/.next/**,**/.expo/**,**/coverage/**,**/.git/**,**/.docker/**

# Coverage Report Path (if you have coverage reports)
SONAR_JAVASCRIPT_LCOV_REPORTPATHS=coverage/lcov.info

# Optional: Verbose logging (true/false)
SONAR_VERBOSE=false
