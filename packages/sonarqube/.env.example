# Database credentials (change if you want)
POSTGRES_USER=sonar-user
POSTGRES_PASSWORD=sonar-password
POSTGRES_DB=sonar-db

# Host ports (map host -> container)
# If you want host 5432, set POSTGRES_PORT_HOST=5432
# If your host 5432 is occupied, change this to another port (e.g., 5433).
POSTGRES_PORT_HOST=5433
SONARQUBE_PORT_HOST=9000

# Container names
POSTGRES_CONTAINER_NAME=sonarqube-db
SONAR_CONTAINER_NAME=sonarqube-server

## Sonar Scanner ENV
# Container name
SCANNER_CONTAINER_NAME=sonarqube-scanner

# Network (should match your SonarQube docker-compose, append sonarqube_ always)
SONARQUBE_NETWORK_NAME=sonarqube_sonarqube-net

# SonarQube server URL (http://SCANNER_CONTAINER_NAME:SONARQUBE_PORT_HOST)
SONAR_HOST_URL=http://sonarqube-server:9000

# Authentication token (from your SonarQube UI)
SONAR_TOKEN=your-token-here

# Project metadata
SONAR_PROJECT_KEY=be-full-stack-boilerplate
SONAR_PROJECT_NAME=be-full-stack-boilerplate
SONAR_PROJECT_VERSION=1.0.0

# Source and exclusions
SONAR_SOURCES=.
SONAR_EXCLUSIONS=**/node_modules/**,**/dist/**,**/build/**,**/.next/**,**/.expo/**,**/coverage/**,**/.git/**,**/.docker/**,**/.venv/**,**/venv/**,**/__pycache__/**,**/*.min.js,**/vendor/**,**/tmp/**,**/temp/**,**/.cache/**

# File type suffixes
SONAR_JAVASCRIPT_FILE_SUFFIXES=.js,.jsx,.mjs,.cjs
SONAR_TYPESCRIPT_FILE_SUFFIXES=.ts,.tsx,.cts,.mts

# Coverage paths and exclusions
SONAR_JAVASCRIPT_LCOV_REPORTPATHS=coverage/lcov.info
SONAR_COVERAGE_EXCLUSIONS=**/*.test.ts,**/*.test.tsx,**/*.spec.ts,**/*.spec.tsx,**/tests/**,**/__tests__/**,**/test/**
SONAR_CPD_EXCLUSIONS=**/tests/**,**/*.test.ts,**/*.spec.ts,**/node_modules/**,**/dist/**,**/build/**

# Encoding and performance
SONAR_SOURCE_ENCODING=UTF-8
SONAR_WS_TIMEOUT=300
SONAR_VERBOSE=false