{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "./apps/api/src/main.js",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "email/templates/**/*",
        "outDir": "./dist/apps/api/src/"
      }
    ],
    "watchAssets": true
  }
}